{
  "image": "ghcr.io/damlys/godev:2022-09-07-05-57-15-86853e0",
  "runArgs": [
    "--name=gomod-devcontainer",
    "--add-host=kubernetes.docker.internal:host-gateway"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.docker,target=/root/.docker,type=bind",
    "source=${localEnv:HOME}/.kube,target=/root/.kube,type=bind",
    "source=${localEnv:HOME}/Library/Preferences/helm,target=/root/.config/helm,type=bind",
    "source=${localEnv:HOME}/.skaffold,target=/root/.skaffold,type=bind",
    "source=${localEnv:HOME}/.config/gcloud,target=/root/.config/gcloud,type=bind"
  ],
  "containerEnv": {
    "EDITOR": "code --wait" // SOPS
  },

  "portsAttributes": {
    "8080": {
      "label": "goapp http-server",
      "onAutoForward": "openPreview"
    },
    "56268": {
      "label": "dlv",
      "onAutoForward": "silent"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "golang.go",
        "googlecloudtools.cloudcode",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ],
      "settings": {}
    }
  }
}
