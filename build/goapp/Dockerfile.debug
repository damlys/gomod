FROM golang:1.19

RUN go install github.com/go-delve/delve/cmd/dlv@v1

WORKDIR /workspace

COPY ./go.mod ./go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -gcflags='all=-N -l' -o ./bin/goapp ./cmd/goapp

ENTRYPOINT ["dlv", "exec", "--headless", "--continue", "--accept-multiclient", "--api-version=2", "--listen=:2345", "./bin/goapp", "--"]
CMD []
